  box-shadow: var(--shadow-card-hover);
}

.hover\:underline:hover {
  text-decoration: underline;
}

.hover\:bg-primary\/90:hover {
  background-color: rgba(var(--color-primary-rgb), 0.9);
}

.hover\:bg-destructive\/90:hover {
