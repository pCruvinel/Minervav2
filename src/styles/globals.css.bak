}

::-webkit-scrollbar-thumb {
  background-color: var(--color-neutral-300);
  border-radius: var(--radius-sm);
  transition: background-color var(--transition-base);
}

::-webkit-scrollbar-thumb:hover {
  background-color: var(--color-neutral-400);
}

* {
  scrollbar-width: thin;
  scrollbar-color: var(--color-neutral-300) var(--color-neutral-100);
}

/* ==========================================
 * SELECTION
 * ========================================== */

::selection {
  background-color: var(--color-primary-200);
  color: var(--color-neutral-900);
}

::-moz-selection {
  background-color: var(--color-primary-200);
  color: var(--color-neutral-900);
}

/* ==========================================
 * FOCUS VISIBLE
 * ========================================== */

:focus {
  outline: none;
}

:focus-visible {
  outline: 2px solid var(--color-primary);
  outline-offset: 2px;
}

/* ==========================================
 * UTILITY CLASSES - OUTROS
 * ========================================== */

.cursor-pointer { cursor: pointer; }
.cursor-not-allowed { cursor: not-allowed; }
.cursor-default { cursor: default; }

.pointer-events-none { pointer-events: none; }

.select-none { user-select: none; }

.whitespace-nowrap { white-space: nowrap; }
.whitespace-normal { white-space: normal; }

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.break-words { word-break: break-word; }

.opacity-0 { opacity: 0; }
.opacity-50 { opacity: 0.5; }
.opacity-60 { opacity: 0.6; }
.opacity-100 { opacity: 1; }

.outline-none { outline: none; }

.ring-2 {
  box-shadow: 0 0 0 2px var(--color-primary);
}

.ring-offset-2 {
  box-shadow: 0 0 0 2px var(--color-white), 0 0 0 4px var(--color-primary);
}

.ring-ring\/50 {
  box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.5);
}

.ring-destructive\/20 {
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
}

.focus-visible\:ring-ring\/50:focus-visible {
  box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.5);
}

.focus-visible\:border-ring:focus-visible {
  border-color: var(--color-ring);
}

.focus-visible\:ring-\[3px\]:focus-visible {
  box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.5);
}

.aria-invalid\:ring-destructive\/20[aria-invalid="true"] {
  box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
}

.aria-invalid\:border-destructive[aria-invalid="true"] {
  border-color: var(--color-error);
}

.object-cover { object-fit: cover; }

.aspect-square { aspect-ratio: 1 / 1; }
.aspect-video { aspect-ratio: 16 / 9; }

.inset-0 {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.z-10 { z-index: 10; }
.z-20 { z-index: 20; }
.z-30 { z-index: 30; }
.z-40 { z-index: 40; }
.z-50 { z-index: 50; }

.flex-shrink-0 { flex-shrink: 0; }
.flex-grow { flex-grow: 1; }

.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }

.self-start { align-self: flex-start; }
.self-center { align-self: center; }
.self-end { align-self: flex-end; }

.justify-start { justify-content: flex-start; }

.flex-wrap { flex-wrap: wrap; }
.flex-nowrap { flex-wrap: nowrap; }

.shrink-0 { flex-shrink: 0; }

.leading-none { line-height: 1; }
.leading-tight { line-height: 1.25; }
.leading-snug { line-height: 1.375; }
.leading-normal { line-height: 1.5; }
.leading-relaxed { line-height: 1.625; }

.tracking-tight { letter-spacing: -0.025em; }
.tracking-normal { letter-spacing: 0; }
.tracking-wide { letter-spacing: 0.025em; }

.antialiased {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.file\:border-0::file-selector-button {
  border: 0;
}

.file\:bg-transparent::file-selector-button {
  background-color: transparent;
}

.file\:text-sm::file-selector-button {
  font-size: var(--font-size-sm);
}

.file\:font-medium::file-selector-button {
  font-weight: var(--font-weight-medium);
}

.file\:text-foreground::file-selector-button {
  color: var(--color-foreground);
}

.file\:inline-flex::file-selector-button {
  display: inline-flex;
}

.file\:h-7::file-selector-button {
  height: 1.75rem;
}

.placeholder\:text-muted-foreground::placeholder {
  color: var(--color-muted-foreground);
}

.peer-disabled\:cursor-not-allowed:has(:disabled) {
  cursor: not-allowed;
}

.peer-disabled\:opacity-50:has(:disabled) {
  opacity: 0.5;
}

.disabled\:cursor-not-allowed:disabled {
  cursor: not-allowed;
}

.disabled\:pointer-events-none:disabled {
  pointer-events: none;
}

.disabled\:opacity-50:disabled {
  opacity: 0.5;
}

.group-data-\[disabled\=true\]\:pointer-events-none[data-disabled="true"] {
  pointer-events: none;
}

.group-data-\[disabled\=true\]\:opacity-50[data-disabled="true"] {
  opacity: 0.5;
}

.has-\[\>svg\]\:px-3:has(> svg) {
  padding-left: 0.75rem;
  padding-right: 0.75rem;
}

.has-\[\>svg\]\:px-2\.5:has(> svg) {
  padding-left: 0.625rem;
  padding-right: 0.625rem;
}

.has-\[\>svg\]\:px-4:has(> svg) {
  padding-left: 1rem;
  padding-right: 1rem;
}

.\[\&_svg\]\:pointer-events-none svg {
  pointer-events: none;
}

.\[\&_svg\]\:shrink-0 svg {
  flex-shrink: 0;
}

.\[\&_svg\:not\(\[class\*\=\'size-\'\]\)\]\:size-4 svg:not([class*='size-']) {
  width: 1rem;
  height: 1rem;
}

/* ==========================================
 * RESPONSIVE - MOBILE
 * ========================================== */

.hidden { display: none; }

@media (max-width: 768px) {
  .md\:block {
    display: none;
  }
  
  .md\:hidden {
    display: block;
  }
}

@media (min-width: 768px) {
  .md\:block {
    display: block;
  }
  
  .md\:hidden {
    display: none;
  }
  
  .md\:flex {
    display: flex;
  }
}

/* ==========================================
 * ACCESSIBILITY
 * ========================================== */

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

@media (prefers-reduced-motion: reduce) {
  *, *::before, *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

/* ==========================================
 * FONT FAMILY UTILITY CLASSES
 * ========================================== */

.font-sans {
  font-family: var(--font-family-sans);
}

.font-serif {
  font-family: var(--font-family-serif);
}

.font-mono {
  font-family: var(--font-family-mono);
}

/* Garantir fallback para fontes em caso de erro de carregamento */
@supports not (font-variation-settings: normal) {
  .font-sans,
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif !important;
  }
  
  .font-serif {
    font-family: Georgia, 'Times New Roman', Times, serif !important;
  }
  
  .font-mono {
    font-family: ui-monospace, 'SF Mono', Monaco, 'Consolas', monospace !important;
  }
}

/* ==========================================
 * PRINT STYLES
 * Estilos para impressão de propostas
 * ========================================== */

@media print {
  /* Ocultar elementos de navegação */
  .print\\:hidden,
  header,
  nav,
  button,
  .no-print {
    display: none !important;
  }

  /* Remover sombras e bordas desnecessárias */
  .print\\:shadow-none {
    box-shadow: none !important;
  }

  /* Garantir que o conteúdo ocupe toda a página */
  body {
    margin: 0;
    padding: 0;
  }

  /* Evitar quebras de página dentro de elementos importantes */
  .print\\:break-inside-avoid {
    break-inside: avoid;
    page-break-inside: avoid;
  }

  /* Forçar quebras de página onde necessário */
  .print\\:break-before {
    break-before: page;
    page-break-before: always;
  }

  /* Cores de fundo para impressão */
  * {
    -webkit-print-color-adjust: exact;
    print-color-adjust: exact;
  }
}
