{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": ["react"],
    "paths": {
      "@supabase/supabase-js": ["./node_modules/@supabase/supabase-js"],
      "@react-pdf/renderer": ["./node_modules/@react-pdf/renderer"],
      "react": ["./node_modules/react"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": ["node_modules"]
}
